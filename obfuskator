using System; 

class Program
{
    static void Main() 
    {
        Console.WriteLine("Введите количество денег: "); // Выводим сообщение пользователю с просьбой ввести количество денег.
        int a = Convert.ToInt32(Console.ReadLine()); // Считываем введенное значение, преобразуем его в целое число и сохраняем в переменной a.
        
        Console.WriteLine("Введите цену одной шоколадки: "); // Выводим сообщение пользователю с просьбой ввести цену шоколадки.
        int b = Convert.ToInt32(Console.ReadLine()); // Считываем введенное значение, преобразуем его в целое число и сохраняем в переменной b.
        
        Console.WriteLine("Введите количество оберток для обмена на новую шоколадку: "); // Выводим сообщение пользователю с просьбой ввести количество оберток для обмена.
        int c = Convert.ToInt32(Console.ReadLine()); // Считываем введенное значение, преобразуем его в целое число и сохраняем в переменной c.
        
        int d = m(a, b, c); // Вызываем метод m с аргументами a, b и c, и сохраняем результат в переменной d.
        
        Console.WriteLine($"Максимально возможное количество шоколадок: {d}"); // Выводим максимальное количество шоколадок, которое можно купить или получить.
    }

    static int m(int a, int b, int c) // Определяем статический метод m, который принимает три целых числа: a, b и c.
    {
        int e = a / b; // Вычисляем количество шоколадок, которое можно купить за деньги (a), деля их на цену одной шоколадки (b), и сохраняем в переменной e.
        int f = e; // Сохраняем текущее количество шоколадок (e) в переменной f для дальнейших вычислений.
        
        while (f >= c) // Запускаем цикл, пока количество оберток (f) больше или равно количеству оберток, необходимых для обмена на новую шоколадку (c).
        {
            int g = f / c; // Вычисляем, сколько новых шоколадок можно получить, деля количество оберток (f) на количество оберток для обмена (c), и сохраняем в переменной g.
            e += g; // Увеличиваем общее количество шоколадок (e) на количество новых шоколадок (g).
            f = g + (f % c); // Обновляем количество оберток (f): добавляем обертки от новых шоколадок (g) и остаток от деления старых оберток (f) на количество оберток для обмена (c).
        }
        
        return e; // Возвращаем общее количество шоколадок (e) из метода m.
    }
}
